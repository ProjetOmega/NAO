{% extends "OmegaNAOBundle::layout.html.twig" %}

{% block title %}
	Rechercher - {{ parent() }}
{% endblock %}

{% block naobundle_body %}
	<script src="{{ asset('js/localisationRecherche.js') }}"></script>
    {{ form(formRecherche) }} <br>
    <style>
       #map {
        height: 400px;
        width: 80%;
       }
    </style>
<div id="espece">
    {% if count > 0 %}
	<table  class="table-responsive" id="tableEspece">
			<th>Test espece</th>
            {% for i in 1..count %}
				<tr>
					<td>
                        {{ recherche[i-1].espece }}
					</td>
				</tr>
        {% endfor %}
		</table>
	<table  class="table-responsive" id="tableLong">
		<th>Test longitude</th>
        {% for i in 1..count %}
			<tr>
				<td>
                    {{ recherche[i-1].longitude }}
				</td>
			</tr>
        {% endfor %}
	</table>
	<table  class="table-responsive" id="tableLat">
		<th>Test latitude</th>
        {% for i in 1..count %}
			<tr>
				<td>
                    {{ recherche[i-1].latitude }}
				</td>
			</tr>
        {% endfor %}
        {% endif %}
	</table>
</div>
    <div id="map"></div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
	<script src="{{ asset('js/bootstrap3-typeahead.js')}}"></script>
	<script>
        var noms = {% if noms is defined %}
                {{ noms|json_encode|raw }}
                {% else %} null
        {% endif %}
	</script>
	<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDtE4xVHrJdaSivopE-_T93pQfJ41Z3Hds&callback=initMap" type="text/javascript" async defer></script>
	<script src="{{ asset('js/localisationRecherche.js') }}"></script>
	<script src="{{ asset('js/autocomplete.js') }}"></script>
{% endblock %}


