{% extends "OmegaNAOBundle::layout.html.twig" %}

{% block head %}
    {{ parent() }}
    <meta name="google-signin-scope" content="profile email">
    <meta name="google-signin-client_id" content="245954021654-njn5rgupo32u6qnn9c86ae2nejhqq9ho.apps.googleusercontent.com">
{% endblock %}

{% block title %}
	Accueil - {{ parent() }}
{% endblock %}

{% block naobundle_body %}

{# S'il y a une erreur, on l'affiche dans un joli cadre #}
    {% if error %}
        <div class="alert alert-danger">{{ error.message }}</div>
    {% endif %}

{% if id is defined %}
    <script>var fb = "{{ id }}";
        document.location.href = 'http://localhost/NAO/web/app_dev.php/login'+'?fb='+fb;
    </script>
{% endif %}
<div class="jumbotron">
<div class="container">
    <div class="row">
        <div class="col">
        </div>
        <div class="col">
        </div>
        <div class="col-6">
            <!-- Form register -->
            <form action="{{ path('login_check') }}" method="post">
                <p class="h5 text-center mb-4">Connexion</p>

                <div class="md-form">
                    <i class="fa fa-user prefix grey-text"></i>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control">
                    <label for="orangeForm-name">identifiant</label>
                </div>

                <div class="md-form">
                    <i class="fa fa-lock prefix grey-text"></i>
                    <input type="password" id="password" name="_password" class="form-control">
                    <label for="orangeForm-pass">mot de passe</label>
                </div>

                <input type="submit" value="Connexion" />
            </form>
        </div>
        <div class="col">

        </div>
        <div class="col">

        </div>
    </div>
    <div class="row">
        <div class="col-5">
        </div>
        <div class="col-3">
            <a href="{{ url }}" class="btn btn-block btn-social btn-facebook">
                <span class="fa fa-facebook"></span>connexion Facebook</a>
        </div>
        <div class="col-1">
            <div class="g-signin2" data-onsuccess="onSignIn"></div>
        </div>
        <div class="col-3">
        </div>
    </div>
</div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://apis.google.com/js/platform.js" async defer></script>
    <script>
    var path = '{{ path('login') }}';
    </script>
    <script src="{{ asset('js/googleConnect.js') }}"></script>
{% endblock %}
