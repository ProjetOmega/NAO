{% extends "OmegaNAOBundle::layout.html.twig" %}

{% block title %}
	Nous contacter
{% endblock %}

{% block naobundle_body %}
	<div class="jumbotron">
		<div class="container">
			<div class="col-3">
			</div>
			<div class="col-6">

				<p class="h5 text-center mb-4">Nous contacter</p>

				<div class="md-form">
                    {{ form_start(formContact) }}
					<label for="orangeForm-name"></label><br/>
				</div>

				<div class="md-form">
                    {{ form_row(formContact.Nom) }}
					<label for="orangeForm-name"></label>
				</div>

				<div class="md-form">
                    {{ form_row(formContact.Email) }}
					<label for="orangeForm-name"></label>
				</div>

				<div class="md-form">
                    {{ form_row(formContact.Sujet) }}
					<label for="orangeForm-name"></label>
				</div>

				<div class="md-form">
                    {{ form_row(formContact.Message) }}
					<label for="orangeForm-name"></label>
				</div>
                {{ form_end(formContact) }}
			</div>
			<div class="col-3">
			</div>
		</div>
	</div>
{% endblock %}