<!DOCTYPE html>
<html lang="fr">
  <head>
    {% block head %}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="#">
   {% endblock %}
    <title>{% block title %}Nos amis les oiseaux{% endblock %}</title>
    
    {% block stylesheets %}
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.4.3/css/mdb.min.css">
      <link rel="stylesheet" href="{{ asset('css/main.css') }}" />
    {% endblock %}
    {% block header %}
    {% endblock %}
    
  </head>
  <body>
    <header>
    <nav class="navbar navbar-expand-lg fixed-top scrolling-navbar navbar-dark bg-default">
      <!--<a class="navbar-brand" href="{{ path('omega_nao_homepage') }}">Nos amis les oiseaux</a>-->
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mx-auto">
          <a class="navbar-brand" href="{{ path('omega_nao_homepage') }}">Nos Amis les Oiseaux</a>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('omega_nao_homepage') }}"> <i class="fa fa-home" aria-hidden="true"></i> Accueil <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('recherche') }}"><i class="fa fa-search" aria-hidden="true"></i> Rechercher</a>
          </li>
          {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            <li class="nav-item">
              <a class="nav-link" href="{{ path('omega_nao_add_observation') }}"><i class="fa fa-plus" aria-hidden="true"></i> Observation</a>
            </li>
          {% endif %}
          <li class="nav-item">
            <a class="nav-link" href=""><i class="fa fa-envelope-o" aria-hidden="true"></i> Contact</a>
          </li>
          {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="http://example.com" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user" aria-hidden="true"></i> Bonjour, {{ app.user.username }}</a>
              <div class="dropdown-menu" aria-labelledby="dropdown01">
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_NATURALISTE') %}
                  <a class="dropdown-item" href="{{ path('omega_nao_moderation_observation') }}">Modération des observations</a>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                  <a class="dropdown-item" href="{{ path('omega_nao_moderation_compte') }}">Modération des comptes</a>
                {% endif %}
                <a class="dropdown-item" href="{{ path('omega_nao_profile') }}"><i class="fa fa-user-circle-o" aria-hidden="true"></i>
                 Mon profil</a>
                <a class="dropdown-item" href="{{ path('logout') }}"><i class="fa fa-sign-out" aria-hidden="true"></i> Déconnexion</a>
              </div>
            </li>
          {% else %}
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="http://example.com" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-sign-in" aria-hidden="true"></i> Se connecter</a>
              <div class="dropdown-menu dropdown-primary" aria-labelledby="dropdown01">
                <a class="dropdown-item" href="{{ path('login') }}"><i class="fa fa-sign-in" aria-hidden="true"></i> Connexion</a>
                <a class="dropdown-item" href="{{ path('inscription') }}"><i class="fa fa-user-plus" aria-hidden="true"></i> Inscription</a>
              </div>
            </li>
          {% endif %}
        </ul>
      </div>
    </nav>
  </header>

    <div class="container">
      {% block body %}
      {% endblock %}
      <footer>
        
    </footer>
  </div>

  {% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
    <script src="https://use.fontawesome.com/267d22d2e5.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.4.3/js/mdb.min.js"></script>
  {% endblock %}
</body>
</html>